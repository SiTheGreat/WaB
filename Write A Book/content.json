{

	"Format": "2.0.0",

	// Method: gather X paper string squid ink feather, put into writing desk, get manuscript, put manuscript into bookbinding machine with leather and glue, get book

	// Config //////////////////////////////////////////////////////////

	"ConfigSchema":{

		"BookTitle": {
			"Default": "Autobiography of a Farmer",
			"Description": "Choose a single word or phrase to describe your entire life's work!"
		},

		"BookDescription": {
			"Default": "A glimpse into the very simple life of a Stardew Valley farmer.",
			"Description": "Describe your book in excruciating detail!"
		},

		"BookColor": {
			"AllowValues": "Red, Yellow, LightGreen, DarkGreen, Blue, Purple, Pink, Black",
			"Default": "Yellow",
			"Description": "Always judge a book by its cover!"
		},

	},

	// Content //////////////////////////////////////////////////////////

	"Changes": [

	// Load Object Textures //////////////////////////////////////////////////////////


		{
			"Action": "Load",
			"Target": "Mods/{{ModId}}/Objects",
			"FromFile": "{{BookColor}}_book.png"
		},

	// Add New Objects //////////////////////////////////////////////////////////

		{
			"Action": "EditData",
			"Target": "Data/Objects",
			"Entries": {
				"{{ModId}}_book": {
					"Name": "{{ModId}}_book",
					"DisplayName": "{{BookTitle}}",
					"Description": "{{BookDescription}}",
					"Type": "Arch",
					"Category": 0,
					"Price": 5000,
					"Texture": "Mods/{{ModId}}/Objects",
					"SpriteIndex": 0,
				}
			}
		},
	
	// Add Gift Tastes //////////////////////////////////////////////////////////


	// Add Crafting Rules //////////////////////////////////////////////////////////

		{
			"Action": "EditData",
			"Target": "Data/CraftingRecipes",
			"Entries": {
				"{{ModId}}_fiberglass": "771 1 (O){{ModId}}_glass 1 (O){{ModId}}_glue 1/Field/{{ModId}}_fiberglass/false/default/",
			},
		},

	// Add Machine Rules //////////////////////////////////////////////////////////

		// Chain
		{
			"Action": "EditData",
			"Target": "Data/Machines",
			"TargetField": [ "(BC)20", "OutputRules" ],
			"Entries": {
				"{{ModId}}anchor_chain": {
					"Id": "{{ModId}}anchor_chain",
					"Triggers": [
						{
							"Trigger": "ItemPlacedInMachine",
							"RequiredItemId": "(O)117",
							"RequiredCount": 1
						}
					],
					"OutputItem": [
					{
						"ItemId": "(O){{ModId}}_chain"
					}
					],
					"MinutesUntilReady": 1080
				}
			},
			"When": {
				"AnchortoChain": true,
			}
		},

	// End //////////////////////////////////////////////////////////

	]

}